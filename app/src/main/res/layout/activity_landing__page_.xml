<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.mobiloitte.friendsierunnerapp.viewModel.ActivityLandingPageViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/landing_page"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/llMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp">

                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:src="@drawable/log_in" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Runner"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/tvLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:text="@string/log_in"
                        android:visibility="gone"
                        android:textColor="@color/red_color"
                        android:textSize="@dimen/_11ssp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llMain"
            android:layout_marginBottom="@dimen/_80sdp"
            android:gravity="center|center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/_40sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvPhoneError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="@string/enter_password"
                    android:textColor="@color/red"
                    android:gravity="center"
                    android:layout_below="@+id/etText"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone" />


                <EditText

                    android:id="@+id/etText"
                    android:layout_width="@dimen/_175sdp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/bg1_color"
                    android:gravity="center"
                    android:hint="xxx-xxx-xxxx"
                    android:inputType="number"
                    android:maxLength="12"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_25ssp" />


    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_3sdp"
        android:text="Phone Number"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>


        <!--</ScrollView>-->


        <Button
            android:id="@+id/btnGetstarted"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/thisismycar_box"
            android:gravity="center"
            android:text="SEND CODE"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold" />
    </RelativeLayout>
</layout>