<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.mobiloitte.friendsierunnerapp.viewModel.ActivityClientViewModel" />
    </data>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".view.AddClientActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/addclient"
        android:orientation="vertical"
        android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_back_edit_phoneno"
        android:layout_width="@dimen/_25sdp"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/ic_forgotpass_arrowback"
        android:layout_height="@dimen/_25sdp"/>




    <TextView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_15sdp"
        android:text="@string/Customer_number"
        android:textSize="@dimen/_18sdp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:textColorHint="@color/white"
        android:layout_height="wrap_content" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            android:backgroundTint="@color/white"
            android:background="#5c5c5c"
            android:padding="10dp"/>







        <LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginStart="@dimen/_20sdp"
    android:layout_marginTop="@dimen/_70sdp"
    android:layout_marginEnd="@dimen/_20sdp"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:text="+1"
        android:gravity="center"
        android:singleLine="true"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/white"
        android:textSize="@dimen/_25sdp"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />




    <EditText
        android:id="@+id/etPhoneNumber"
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:hint="xxx-xxx-xxxx"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/_25sdp"
         android:inputType="number"
        android:maxLength="12"
        android:background="@null"
        android:maxLines="1"
        android:backgroundTint="@color/white"
        android:layout_height="wrap_content" />


</LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            android:background="#5c5c5c"
            android:backgroundTint="@color/white"
            android:padding="10dp"/>



        <TextView
            android:id="@+id/tv_verify_code"
            android:layout_width="@dimen/_150sdp"
            android:text="@string/send_app_link"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/_14ssp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#d74601"
            android:layout_height="@dimen/_45sdp"/>
    </LinearLayout>

</LinearLayout>
</layout>